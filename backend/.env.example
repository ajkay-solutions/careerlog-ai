# Server Configuration
NODE_ENV=development
PORT=3004

# Database (Supabase PostgreSQL)
# Development: Use worklog-ai-dev connection string
# Production: Use worklog-ai-prod connection string
DATABASE_URL=postgresql://postgres.[project]:[password]@aws-0-us-west-1.pooler.supabase.com:6543/postgres

# Redis Cache (Upstash) - Single database with environment prefixes
# Free tier allows only 1 database, code uses key prefixes for dev/prod separation
# Format: dev:cache:key vs prod:cache:key
REDIS_URL=redis://default:[password]@us1-xxx.upstash.io:6379

# OAuth (same credentials as Job Assistant)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# JWT & Session
JWT_SECRET=your-jwt-secret-256-bit
SESSION_SECRET=your-session-secret

# AI Service (Anthropic Claude)
ANTHROPIC_API_KEY=sk-ant-api03-xxx

# Email (Mailgun - same as Job Assistant)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.ajkaysolutions.com